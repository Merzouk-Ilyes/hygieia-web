<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Se connecter</title>

    <!-- =====  ICONS ===== -->
    <link
      rel="stylesheet"
      href="https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css"
    />
    <!-- === CSS ===-->
    <link rel="stylesheet" href="/css/auth/styles.css" />
  </head>
  <body> 
    <div class="container">
      <form action="/users/login" method="POST">
        <img src="/assets/logo_login.png" alt="UTF-8">
        <div class="error">
          <%= error%>
        </div>
        
        <p>Adresse email</p>
        <div class="input-field one">
          <i class="fi-rr-envelope"></i>
          <input
            type="email"
            name="email"
            placeholder="Entrez votre email"
            required
          />
        </div>

        <p>Mot de passe</p>
          <div class="input-field two">
            <i class="fi-rr-lock"></i>
            <input
              type="password"
              placeholder="Entrez votre mot de passe"
              id="password"
              name="password"
              required
            />
            <i class="fi-rr-eye" id="eye"></i>
          </div>
        
          <button type="submit" class="btn">Se connecter</button>
          <a href="/users/forget">mot de passe oubliÃ© ?</a>
      </form>
    </div>
    <script src="/js/views.js"></script>
  </body>
</html>
